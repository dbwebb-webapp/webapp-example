<?xml version='1.0' encoding='utf-8'?>
<widget id="se.dbwebb.husLeta" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>HusLeta</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="hdpi" src="www/res/mipmap-hdpi/husLetaIcon.png" />
        <icon density="mdpi" src="www/res/mipmap-mdpi/husLetaIcon.png" />
        <icon density="xhdpi" src="www/res/mipmap-xhdpi/husLetaIcon.png" />
        <icon density="xxhdpi" src="www/res/mipmap-xxhdpi/husLetaIcon.png" />
        <icon density="xxxhdpi" src="www/res/mipmap-xxxhdpi/husLetaIcon.png" />
        <splash density="port-hdpi" src="www/res/screens/android/screen-hdpi-portrait.png" />
        <splash density="land-hdpi" src="www/res/screens/android/screen-hdpi-landscape.png" />
        <splash density="port-mdpi" src="www/res/screens/android/screen-mdpi-portrait.png" />
        <splash density="land-mdpi" src="www/res/screens/android/screen-mdpi-landscape.png" />
        <splash density="port-xhdpi" src="www/res/screens/android/screen-xhdpi-portrait.png" />
        <splash density="land-xhdpi" src="www/res/screens/android/screen-xhdpi-landscape.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-splashscreen" spec="~4.0.2" />
    <plugin name="cordova-plugin-file" spec="~4.3.2" />
    <plugin name="cordova-plugin-device" spec="~1.1.5" />
</widget>
